{
  "name": "@nanostores/react",
  "version": "1.0.0",
  "description": "React integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores",
  "keywords": [
    "store",
    "state",
    "state manager",
    "react",
    "react native"
  ],
  "scripts": {
    "test:lint": "eslint .",
    "test:coverage": "c8 pnpm bnt",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm run /^test:/"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/react",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "peerDependencies": {
    "nanostores": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^1.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^55.2.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.18.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "better-node-test": "^0.7.2",
    "c8": "^10.1.3",
    "check-dts": "^0.9.0",
    "clean-publish": "^5.2.2",
    "eslint": "^9.35.0",
    "happy-dom": "^17.6.3",
    "nanodelay": "^2.0.2",
    "nanostores": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "size-limit": "^11.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*",
      "test/*"
    ],
    "lines": 100,
    "check-coverage": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "skip-full": true,
    "clean": true
  },
  "size-limit": [
    {
      "import": {
        "index.js": "{ useStore }",
        "nanostores": "{ map, computed }"
      },
      "limit": "930 B"
    }
  ]
}
